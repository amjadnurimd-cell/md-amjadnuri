    musicName: 'Singing in the Rain - Remix',
  }
];

const App: React.FC = () => {
  const [videos, setVideos] = useState<VideoContent[]>(INITIAL_VIDEOS);
  const [activeTab, setActiveTab] = useState<'for-you' | 'following'>('for-you');
  const [view, setView] = useState<'home' | 'friends' | 'inbox' | 'profile' | 'search' | 'settings'>('home');
  const [isCreateModalOpen, setIsCreateModalOpen] = useState(false);
  const [isBooting, setIsBooting] = useState(true);
  const scrollContainerRef = useRef<HTMLDivElement>(null);

  useEffect(() => {
    // Simulate app boot sequence
    const timer = setTimeout(() => {
      setIsBooting(false);
    }, 2500);
    return () => clearTimeout(timer);
  }, []);

  const handleAddNewVideo = (newVideo: VideoContent) => {
    setVideos([newVideo, ...videos]);
    setIsCreateModalOpen(false);
    setView('home');
    if (scrollContainerRef.current) {
      scrollContainerRef.current.scrollTo({ top: 0, behavior: 'smooth' });
    }
  };

  if (isBooting) {
    return <SplashScreen />;
  }

  const renderContent = () => {
    switch (view) {
      case 'profile':
        return <Profile videos={videos} onOpenSettings={() => setView('settings')} />;
      case 'search':
        return <SearchScreen />;
      case 'friends':
        return <FriendsScreen />;
      case 'inbox':
        return <InboxScreen />;
      case 'settings':
        return <SettingsScreen onBack={() => setView('profile')} />;
      default:
        const filteredVideos = activeTab === 'following' 
          ? videos.filter(v => v.user.isFollowing)
          : videos;

        return (
          <div ref={scrollContainerRef} className="video-container no-scrollbar flex-1">
            {filteredVideos.length > 0 ? (
              filteredVideos.map((video) => (
                <VideoCard key={video.id} video={video} />
              ))
            ) : (
              <div className="h-screen flex flex-col items-center justify-center text-zinc-500 p-10 text-center">
                <i className="fa-solid fa-users text-4xl mb-4 opacity-20"></i>
                <p>Follow some creators to see their content here!</p>
                <button 
                  onClick={() => setActiveTab('for-you')}
                  className="mt-6 px-6 py-2 bg-white text-black font-bold rounded-full text-sm"
                >
                  Go to For You
                </button>
              </div>
            )}
          </div>
        );
    }
  };

  return (
    <div className="relative h-screen w-screen bg-black overflow-hidden flex flex-col animate-in fade-in duration-500">
      {view === 'home' && (
        <TopNav 
          activeTab={activeTab} 
          setActiveTab={setActiveTab} 
          onSearch={() => setView('search')} 
        />
      )}
      
      {renderContent()}

      <BottomNav 
        activeTab={view === 'settings' ? 'profile' : view} 
        onTabChange={(t) => setView(t as any)}
        onCreateClick={() => setIsCreateModalOpen(true)} 
      />

      {isCreateModalOpen && (
        <CreateModal 
          isOpen={isCreateModalOpen} 
          onClose={() => setIsCreateModalOpen(false)}
          onVideoCreated={handleAddNewVideo}
        />
      )}
    </div>
  );
};

export default App;
